{{#if oneProduct}}
<h1>Producto solicitado por ID:</h1>
<div>
  <b>Producto {{product.id}}</b>
  <ul>
    <li>Nombre: {{product.title}}</li>
    <li>Descripcion: {{product.description}}</li>
    <li>Precio: {{product.price}}</li>
  </ul>
</div>
{{else}}
<h1>Lista de productos disponibles:</h1>
{{#each products}}
<div>
  <b>Producto {{this.id}}</b>
  <ul>
    <li>Nombre: {{this.title}}</li>
    <li>Descripcion: {{this.description}}</li>
    <li>Precio: {{this.price}}</li>
  </ul>
</div>
{{/each}}
{{/if}}